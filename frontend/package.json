{
  "name": "laredocmind",
  "private": false,
  "version": "1.0.0",
  "description": "LaredocMind: The knowledge you seek, before you ask.",
  "author": "Gabriel Gomez Garcia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gabiz053/LaredocMind.git"
  },
  "type": "module",
  "types": "dist/laredocmind.d.ts",
  "main": "dist/laredocmind.umd.js",
  "module": "dist/laredocmind.es.js",
  "exports": {
    ".": {
      "import": "./dist/laredocmind.es.js",
      "require": "./dist/laredocmind.umd.js"
    },
    "./laredocmind.css": {
      "import": "./dist/laredocmind.css",
      "require": "./dist/laredocmind.css"
    }
  },
  "files": [
    "dist",
    "src/assets/images"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "prepublishOnly": "npm run build",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint",
    "preview": "vite preview",
    "clean": "rimraf dist",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-shadow": "^20.6.0",
    "serve": "^14.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@tailwindcss/vite": "^4.1.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.4",
    "vite": "^6.3.4"
  }
}
